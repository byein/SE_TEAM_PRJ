<html>
    <head>
      <meta charset="utf-8">
      <title>배송지 관리화면</title>
      <link rel="stylesheet" href="delivery_address.css"/>
      <% include /head_user %>
    </head>
    <body>
    <% include /header %>

    <!-- 카테고리 드롭박스 구현 -->
    <% include /dropmenu %>
    
    <div class="add_address">
      <button id="add">
        <a id="goto-address" href="pop_up" style="font-size: 15px;">배송지 추가하기</a>
      </button>
    </div>
    <table class="delivery_table" id="sTable">
      <thead>
        <th>배송지명</th>
        <th>수령인</th>
        <th>주소</th>
        <th>연락처</th>
        <th>배송지 유형</th>
        <th>관리</th>
      </thead>
      <tbody>
        <% address.forEach(function(value) { %>
        <tr>
          <td> <%= value.adTitle %></td>
          <td> <%= value.adName %></td>
          <td> <%= value.adPost_code %> <%= value.adRoad_address %> <%= value.adDetail_address %></td>
          <td> <%= value.adNum1 %>- <%= value.adNum2 %>- <%= value.adNum3 %> </td>
          <td> <%= value.adType %></td>
          <td>
            <!-- 수정 삭제 버튼 -->
            <button>
              <a href="/edit_address/<%= value.adIdx %>"> 수정 </a>
            </button>
            <button>
              <a href="/delete_address/<%= value.adIdx %>"> 삭제 </a>
            </button>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <% include /footer %>

    <script language="javascript" >
      let delivery = {
        delItem: function () {
            event.target.parentElement.parentElement.parentElement.remove();
        }
      }
    </script>
    </body>
</html>
