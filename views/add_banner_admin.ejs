        <section>
            <h2>New Notice/Event</h2>
            <form action= "/create_banner" method="POST">
                <div>
                    <table>
                        <tr><td>제목</td><td><input type = "text" name = "nTitle"></td></tr>
                        <tr><td>종류</td>
