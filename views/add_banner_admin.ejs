                        <tr><td>공지/이벤트 이미지</td><td><input type="file" name ="nImg" accept="image/*"></td></tr>
                        <tr><td>기타 설명</td><td><input type = "text" name ="nDetail" rows="5" cols="30"></td></tr>
                        <tr><td>기간</td><td><input type = "date" name ="nStartDate" pattern="\d*">
                                             <input type = "date" name ="nEndDate" pattern="\d*"></td>
                        </tr>
                    </table>
                </div>
                <button type = "submit"> submit </button>    
            </form>
